<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE mapper
  PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>


<mapper namespace='io.rezoome.manager.database.dao.Dao'>

	<resultMap id="MkUserResultEntity"
		type="io.rezoome.external.mk.entity.MkUserResultEntity">
		<result property="userid" column="userid" />
		<result property="email" column="email" />
		<result property="name" column="name" />
		<result property="birth" column="birth" />
		<result property="phone" column="phone" />
		<result property="gender" column="gender" />
	</resultMap>

	<resultMap id="MkResultEntity" type="io.rezoome.external.mk.entity.MkResultEntity">
		<result property="name" column="name" />
		<result property="phone" column="phone" />
		<result property="userid" column="userid" />
		<result property="grade" column="re_grade" />
		<result property="point0" column="re_point0" />
		<result property="point1" column="re_point1" />
		<result property="point2" column="re_point2" />
		<result property="point3" column="re_point3" />
		<result property="date" column="re_regdate" />
	</resultMap>

	<select id="getUserRecords" parameterType="io.rezoome.manager.database.entity.DBEntity"
		resultMap="MkUserResultEntity">
		SELECT userid, email, name, birth, phone, gender
		FROM MK_USR
		WHERE
		name =
		#{fullNameKO} AND birth = #{birth}
	</select>

	<select id="getCertRecords" parameterType="io.rezoome.manager.database.entity.DBEntity"
		resultMap="MkResultEntity">
		SELECT
		MU.name, MU.phone, MR.userid, MR.re_grade,
		MR.re_point0, MR.re_point1, MR.re_point2, MR.re_point3
		FROM
		MK_DB.MK_RESULT AS MR
		INNER JOIN MK_USR AS MU ON (MR.userid = MU.userid)
		WHERE MR.userid = #{orgUserId};
	</select>

</mapper>